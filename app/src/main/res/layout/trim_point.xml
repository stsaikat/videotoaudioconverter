<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageButton
        android:id="@+id/ib_trim_point_plus"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_marginStart="8dp"
        android:background="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv_trim_point_time"
        app:layout_constraintTop_toBottomOf="@+id/tv_trim_point_name"
        app:srcCompat="@drawable/ic_plus_button" />

    <ImageButton
        android:id="@+id/ib_trim_point_minus"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:background="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_trim_point_name"
        app:srcCompat="@drawable/ic_minus_button" />

    <TextView
        android:id="@+id/tv_trim_point_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="00:00:00.0"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/ib_trim_point_minus"
        app:layout_constraintStart_toEndOf="@+id/ib_trim_point_minus"
        app:layout_constraintTop_toTopOf="@+id/ib_trim_point_minus" />

    <TextView
        android:id="@+id/tv_trim_point_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="name"
        android:textColor="@color/text_color_inactive"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/tv_trim_point_time"
        app:layout_constraintStart_toStartOf="@+id/tv_trim_point_time"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>